---
import Header from "../components/astro/Header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Hyeongjin's blog" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <div class="max-w-4xl w-full mx-auto px-4">
      <slot />
    </div>
  </body>
</html>
<style>
  /* noto-sans-kr-latin-wght-normal */
  /* noto-sans-kr-latin-wght-normal */
  @font-face {
    font-family: "Noto Sans KR Variable";
    font-style: normal;
    font-display: swap;
    font-weight: 100 900;
    src: url(@fontsource-variable/noto-sans-kr/files/noto-sans-kr-latin-wght-normal.woff2)
      format("woff2-variations");
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA,
      U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122,
      U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  /* noto-sans-kr-korean-wght-normal */
  @font-face {
    font-family: "Noto Sans KR Variable";
    font-style: normal;
    font-display: swap;
    font-weight: 100 900;
    src: url(@fontsource-variable/noto-sans-kr/files/noto-sans-kr-korean-wght-normal.woff2)
      format("woff2-variations");
  }
</style>
